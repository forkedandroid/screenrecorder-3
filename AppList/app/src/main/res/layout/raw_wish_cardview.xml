<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv"


        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="5dp"


        android:foreground="?android:attr/selectableItemBackground"
        android:orientation="vertical"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="@dimen/cardview_default_elevation">
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="95dp"

            >

            <ImageView
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:id="@+id/person_photo"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="15dp"
                android:scaleType="centerCrop"

                android:src="@drawable/placekitten_3"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvNotiName"
                android:layout_toRightOf="@+id/person_photo"
                android:layout_alignParentTop="true"
                android:textColor="@color/clr_txt_name"
                android:text="asdkbk"
                android:textSize="18dp"
                android:paddingTop="5dp"

                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_above="@+id/tvDetail" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvDetail"
                android:textColor="@color/clr_txt_gray"
               android:text="ksdajf sadlkfmnlk klasmdl kamsd k \n asd as;ldk asd"
                android:maxLines="2"
                android:gravity="center_vertical"
                android:drawablePadding="7dp"
                android:textSize="14dp"
                android:paddingBottom="10dp"
                android:layout_above="@+id/tvNotiTime"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_toRightOf="@+id/person_photo"
                android:layout_toEndOf="@+id/person_photo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvNotiTime"
                android:textColor="@color/clr_txt_name"
                android:text="ksdajf sadlkfmnlk klasmdl kamsd kasdasasdasdasdasdd"
                android:maxLines="1"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/time"
                android:drawablePadding="7dp"
                android:textSize="14dp"
                android:paddingBottom="10dp"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@+id/person_photo"
                android:layout_toRightOf="@+id/person_photo" />

            <View
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:padding="3dp"
                android:layout_margin="5dp"
                android:id="@+id/vOnline"
                android:alpha="0.6"

                android:background="@drawable/v_online"
                android:layout_alignParentTop="true"
                android:layout_alignRight="@+id/person_photo"
                android:layout_alignEnd="@+id/person_photo" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
